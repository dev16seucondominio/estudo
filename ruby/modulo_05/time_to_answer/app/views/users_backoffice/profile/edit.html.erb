<div class="row">
  <div class="col-md-12 col-sm-12 ">
      <div class="x_title">
        <h2>Dados Gerais</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <% if @user.errors.any? %>
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <ul>
              <% @user.errors.full_messages.each do |erro| %>
                <li><%= erro %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with(url: users_backoffice_profile_path, model: @user, local: true) do |form| %>
          <div class="item form-group">
            <%= form.label :first_name, class:"col-form-label col-md-3 col-sm-3 label-align" %>
            <div class="col-md-6 col-sm-6 ">
              <%= form.text_field :first_name, class:"form-control form-control-user", placeholder:"Nome" %>
            </div>
          </div>
          <div class="col-sm-6 mb-3 mb-sm-0" style="display: none;">
            <%= form.label :id %>
            <%= form.text_field :id %>
          </div>
          <div class="item form-group">
            <%= form.label :last_name, class:"col-form-label col-md-3 col-sm-3 label-align" %>
            <div class="col-md-6 col-sm-6 ">
              <%= form.text_field :last_name, class:"form-control form-control-user", placeholder:"Sobrenome" %>
            </div>
          </div>
          <div class="item form-group">
            <%= form.label :email, class:"col-form-label col-md-3 col-sm-3 label-align" %>
            <div class="col-md-6 col-sm-6 ">
              <%= form.text_field :email, class:"form-control form-control-user", placeholder:"Email", readonly: true %>
            </div>
          </div>
          <div class="ln_solid"></div>
          <%= form.fields_for :user_profile do |profile_form| %>

            <div class="item form-group">
              <%= profile_form.label :zip_code, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6 ">
                <div class="input-group">
                  <%= profile_form.text_field :zip_code, class:"form-control form-control-user", placeholder:"CEP"%>
                  <span class="input-group-btn">
                    <%= link_to "Buscar", users_backoffice_zip_code_path, remote:true, class:"btn btn-primary", id:"zip-code-link"  %>
                  </span>
                </div>
              </div>
            </div>

            <script>
              let zip_code_input = document.getElementById("user_user_profile_attributes_zip_code");
              let zip_code_link = document.getElementById("zip-code-link");

              zip_code_input.addEventListener("change", function(){
                zip_code_link.href = '<%= users_backoffice_zip_code_path %>/?zip_code='+zip_code_input.value;
              });
            </script>


            <div class="item form-group">
              <%= profile_form.label :address, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6 ">
                <%= profile_form.text_field :address, class:"form-control form-control-user", placeholder:"Endereço"%>
              </div>
            </div>
            <div class="item form-group">
              <%= profile_form.label :gender, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6 ">
                <%= profile_form.text_field :gender, class:"form-control form-control-user", placeholder:"Gênero"%>
              </div>
            </div>
            <div class="item form-group">
              <%= profile_form.label :birthdate, class:"col-form-label col-md-3 col-sm-3 label-align" %>
              <div class="col-md-6 col-sm-6 ">
                <%= profile_form.date_field :birthdate, class:"form-control form-control-user", placeholder:"Data de aniversário"%>
              </div>
            </div>
          <% end %>
          <div class="item form-group">
            <%= form.label :password, class:"col-form-label col-md-3 col-sm-3 label-align" %>
            <div class="col-md-6 col-sm-6 ">
              <%= form.password_field :password, class:"form-control form-control-user", placeholder:"Senha" %>
            </div>
          </div>
          <div class="item form-group">
            <%= form.label :password_confirmation, class:"col-form-label col-md-3 col-sm-3 label-align" %>
            <div class="col-md-6 col-sm-6 ">
              <%= form.password_field :password_confirmation, class:"form-control form-control-user", placeholder:"Confirmação da senha" %>
            </div>
          </div>
          <div class="ln_solid"></div>
          <div class="item form-group">
            <div class="col-md-6 col-sm-6 offset-md-3">
              <button type="submit" class="btn btn-success">Enviar</button>
            </div>
          </div>

        <% end %>
      </div>

  </div>
</div>
