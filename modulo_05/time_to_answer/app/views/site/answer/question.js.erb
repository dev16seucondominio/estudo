var elemento = document.getElementById('submit_<%= @answer.question_id %>');
elemento.classList.remove('btn-primary');
elemento.classList.remove('btn-danger');
elemento.classList.remove('btn-success');

if (<%= @answer[:correct] %>) {
  elemento.classList.add('btn-success');
  $.bootstrapGrowl('Resposta correta', {
    type: 'success',
    align: 'right',
    allow_dismiss: true,
    stackup_spacing: 10
  });
} else {
  elemento.classList.add('btn-danger');
  $.bootstrapGrowl('Resposta incorreta', {
    type: 'danger',
    align: 'right',
    allow_dismiss: true,
    stackup_spacing: 10
  });
}
