<h1><%= t(action_name) %></h1>

<% if @subject.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
    <ul>
      <% @subject.errors.full_messages.each do |erro| %>
        <li><%= erro %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Dados Gerais</h6>
  </div>
  <div class="card-body">
    <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
      <div class="form-group row">
        <div class="col-sm-12 mb-3 mb-sm-0">
          <%= form.label :description %>
          <%= form.text_field :description, class:"form-control form-control-user", placeholder:"Descrição" %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0" style="display: none;">
          <%= form.label :id %>
          <%= form.text_field :id %>
        </div>
      </div>
      <button type="submit" class="btn btn-primary btn-user btn-block">
        <%= t(action_name) %> Assunto
      </button>
      <hr>
    <% end %>

  </div>
</div>

