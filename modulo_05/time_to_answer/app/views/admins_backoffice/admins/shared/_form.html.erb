<h1><%= t(action_name) %></h1>

<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
    <ul>
      <% @admin.errors.full_messages.each do |erro| %>
        <li><%= erro %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Dados Gerais</h6>
  </div>
  <div class="card-body">
    <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
      <div class="form-group row">
        <div class="col-sm-6">
          <label>Nome</label>
          <%= @admin.to_json %>
          <input type="text" class="form-control form-control-user" placeholder="Last Name">
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
          <%= form.label :email %>
          <%= form.text_field :email, class:"form-control form-control-user", placeholder:"Email" %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0" style="display: none;">
          <%= form.label :id %>
          <%= form.text_field :id, class:"form-control form-control-user", placeholder:"Email" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
          <%= form.label :password %>
          <%= form.text_field :password, class:"form-control form-control-user", placeholder:"Senha", type:"password" %>
        </div>
        <div class="col-sm-6">
          <%= form.label :password_confirmation %>
          <%= form.text_field :password_confirmation, class:"form-control form-control-user", placeholder:"Senha", type:"password" %>
        </div>
      </div>
      <button type="submit" class="btn btn-primary btn-user btn-block">
        <%= t(action_name) %> Usu√°rio
      </button>
      <hr>
    <% end %>

  </div>
</div>

